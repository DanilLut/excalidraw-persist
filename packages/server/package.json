{
  "name": "@excalidraw-persist/server",
  "version": "1.0.0",
  "description": "Server for Excalidraw Persist with persistence",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src -e ts --exec \"ts-node src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "test:api": "ts-node src/scripts/test-api.ts",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "excalidraw",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/morgan": "^1.9.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/node": "^20.8.4",
    "@types/sqlite3": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
